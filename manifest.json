{
  "manifest_version": 3,
  "name": "Text Translator",
  "version": "1.0",
  "description": "Translates selected text.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Translate Text"
  },
  "icons": {
    "48": "icon.png"
  }
}
